// copy-sitemap.js
const fs = require('fs');
const path = require('path');

const src = path.join(__dirname, 'sitemap.xml');
const destDir = path.join(__dirname, 'dist');
const dest = path.join(destDir, 'sitemap.xml');

if (!fs.existsSync(src)) {
  console.error('sitemap.xml not found in project root.');
  process.exit(1);
}
if (!fs.existsSync(destDir)) {
  console.error('dist folder not found â€” run build first.');
  process.exit(1);
}

fs.copyFileSync(src, dest);
console.log('Copied sitemap.xml -> dist/sitemap.xml');
